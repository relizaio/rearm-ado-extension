{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": ".",
        "rootDir": ".",
        "declaration": false,
        "sourceMap": false
    },
    "include": ["*.ts"],
    "exclude": ["node_modules"]
}
